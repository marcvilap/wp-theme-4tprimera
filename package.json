{
	"scripts": {
		"dev:css": "tailwindcss -i assets/styles/source.css -o assets/styles/bundle.css -w --postcss",
		"dev:js": "rollup -cw --bundleConfigAsCjs",
		"dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
		"build": "tailwindcss -i assets/styles/source.css -o assets/styles/bundle.css --postcss && rollup -c --bundleConfigAsCjs"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-terser": "^0.4.0",
		"@rollup/plugin-typescript": "^11.0.0",
		"autoprefixer": "^10.4.13",
		"concurrently": "^8.0.1",
		"cssnano": "^6.0.0",
		"postcss": "^8.4.18",
		"postcss-import": "^15.1.0",
		"rollup": "^3.3.0",
		"swiper": "^9.2.4",
		"tailwindcss": "^3.2.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.2"
	}
}
